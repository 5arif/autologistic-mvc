    <link href="~/css/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/libs/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/libs/animate.css" rel="stylesheet" />
    <link href="~/css/app/style-based.css" rel="stylesheet" />
    <link href="~/css/app/stylish-portfolio.css" rel="stylesheet" />
    <link href="~/css/app/site.css" rel="stylesheet" />
    <title>AutoLogistic</title>
</head>

<body>
    <!-- Navigation -->
    <nav id="sidebar-wrapper">
        <div class="sidebar-nav">
            <div class="sidebar-brand bg-primary text-center">
                <label class="time" style="font-size: xx-large;">20:57</label>
            </div>
            <div class="form-horizontal">
                <div class="form-group form-animate-text">
                    <input type="text" class="form-text">
                    <span class="bar"></span>
                    <label>User Name</label>
                </div>
                <div class="form-group form-animate-text">
                    <input class="form-text" type="password">
                    <span class="bar"></span>
                    <label>Password</label>
                </div>
                <div class="form-group form-animate-text">
                    <div class="pull-right btn-group">
                        <a class="btn btn-danger" id="btnCancel">Cancel</a>
                        <a href="../Dashboard" class="btn btn-primary">Log'In</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    <!-- Header -->

    <header id="top" class="header animated fadeInLeft">
        <div class="text-vertical-center">
            <h1>AutoLogistic</h1>
            <h3>Logistic that you can trust</h3>
            <br>
            <a href="#about" class="btn btn-primary ripple-infinite btn-lg">Let's Start</a>
        </div>
    </header>

    <!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Your time is our priority</h2>
                    <p class="lead">
                        We reach you where ever you are,.. <a target="_blank" href="/#">Learn more..</a>.
                    </p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Services -->
    <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
    <section id="services" class="services bg-primary">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-10 col-lg-offset-1">
                    <h2>Chose what you need !</h2>
                    <hr class="small">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x point">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-check fa-stack-1x text-primary"></i>
                                </span>
                                <h4>
                                    <strong>Receiving</strong>
                                </h4>
                                <p>Manage receiving data.</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x point">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-list fa-stack-1x text-primary"></i>
                                </span>
                                <h4>
                                    <strong>Stuffing</strong>
                                </h4>
                                <p>Manage Stuffing Data</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x point">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-send fa-stack-1x text-primary"></i>
                                </span>
                                <h4>
                                    <strong>Shipping</strong>
                                </h4>
                                <p>Monitoring Shipping progress.</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x point">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-check-circle fa-stack-1x text-primary"></i>
                                </span>
                                <h4>
                                    <strong>Auditing</strong>
                                </h4>
                                <p>Maintening shipping periperal</p>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <ul class="list-inline">
                        <li>
                            <a href="#">
                                <i class="fa fa-facebook fa-fw fa-2x"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-twitter fa-fw fa-2x"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-instagram fa-fw fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                    <hr class="small">
                    <p class="text-muted">Copyright &copy; AutoLogistic 2016</p>
                </div>
            </div>
        </div>
    </footer>

    <environment names="Development">
        <script src="~/js/bundle/bundle.libs.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/bundle/bundle.libs.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</body>
</html>
