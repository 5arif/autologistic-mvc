        <link href="~/css/bundle/bundle.libs.css" rel="stylesheet" />
        <link href="~/css/bundle/bundle.app.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/css/bundle/bundle.libs.min.css" rel="stylesheet" asp-append-version="true" />
